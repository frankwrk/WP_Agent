PORT=3001
NODE_ENV=development

# Required in production
DATABASE_URL=postgres://postgres:postgres@localhost:5432/wp_agent
PAIRING_BOOTSTRAP_SECRET=replace-with-strong-secret
BACKEND_SIGNING_PRIVATE_KEY=replace-with-base64-ed25519-private-key
BACKEND_SIGNING_AUDIENCE=wp-agent-runtime
SIGNATURE_TTL_SECONDS=180
SIGNATURE_MAX_SKEW_SECONDS=300

# Optional runtime settings
RUN_RECOVERY_STALE_MINUTES=15
RUN_WORKER_POLL_INTERVAL_MS=1000
